<UserControl x:Class="Omnipaste.ActivityList.ActivityList.NotEmpty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:properties="clr-namespace:Omnipaste.Properties"
        mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">

    <Border Style="{DynamicResource ActivityContainerStyle}">
        <StackPanel>
            <StackPanel Style="{DynamicResource FilterContainer}">
                <CheckBox Style="{DynamicResource ClippingsButtonStyle}" Content="{x:Static properties:Resources.MasterClippingListDisplayName}"/>
                <CheckBox Style="{DynamicResource CallsButtonStyle}" Content="{x:Static properties:Resources.Calls}"/>
                <CheckBox Style="{DynamicResource MessagesButtonStyle}" Content="{x:Static properties:Resources.Messages}"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="Items">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl cal:View.Model="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
