<UserControl x:Class="Omnipaste.Activities.ActivityList.Activity.Activity.Call"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:Omnipaste.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Control Style="{DynamicResource ImageInCircle}" Tag="{Binding Path=Contact.Image}" Margin="0,0,14,0"/>
        <TextBlock Text="{x:Static properties:Resources.CallLabel}" Style="{DynamicResource ActivityTitleTextBlockStyle}"/>
        <TextBlock x:Name="Contact_Identifier" Style="{DynamicResource ActivityContentTextBlockStyle}" FontWeight="SemiBold"/>
    </StackPanel>
</UserControl>
