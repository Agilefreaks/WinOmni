<UserControl x:Class="Omnipaste.WorkspaceDetails.GroupMessage.GroupMessageContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <ContentControl cal:View.Model="{Binding Path=SMSComposer}" DockPanel.Dock="Bottom"/>
        <ScrollViewer Width="{StaticResource WideContainerWidth}" HorizontalScrollBarVisibility="Hidden">
            <Grid VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>
