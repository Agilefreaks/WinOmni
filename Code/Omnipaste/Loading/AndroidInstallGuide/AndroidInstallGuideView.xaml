<UserControl x:Class="Omnipaste.Loading.AndroidInstallGuide.AndroidInstallGuideView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:Omnipaste.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Style="{StaticResource HeaderStyle}" Content="{x:Static p:Resources.AndroidInstallGuideLabel1}"/>
            <Label Style="{StaticResource DescriptionHeaderStyle}" Content="{x:Static p:Resources.AndroidInstallGuideLabel2}"/>
            <Label Style="{StaticResource HeaderStyle}" Content="{x:Static p:Resources.AndroidInstallGuideLabel3}"/>
            <Label Style="{StaticResource HeaderStyle}" Content="{x:Static p:Resources.AndroidInstallGuideLabel4}"/>
        </StackPanel>

        <Button Grid.Row="1" Content="{x:Static p:Resources.AndroidInstallGuideButton}" x:Name="Ok" Style="{StaticResource PrimaryDialogButton}" />
    </Grid>
</UserControl>
