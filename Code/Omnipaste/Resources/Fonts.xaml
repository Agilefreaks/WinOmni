<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="NotificationHeaderFont">Segoe UI Semibold 8</FontFamily>
    <FontFamily x:Key="NotificationContentFont">Segoe UI Semilight 8</FontFamily>
    <FontFamily x:Key="ContentFont">Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="ActivityContentFont">Segoe UI</FontFamily>

    <!--Converting from pt to DIP is done using the formula: 1pt=72/96 
    1 DIP = 1/96 inches
    1 pt = 1/72 inches-->
    <System:Double x:Key="NotificationContentFontSize">14</System:Double>
    <System:Double x:Key="NotificationButtonFontSize">12</System:Double>
    <System:Double x:Key="LargeFontSize">22</System:Double>
    <System:Double x:Key="FilterButtonFontSize">10</System:Double>
    <System:Double x:Key="ActivityTimeStampFontSize">9</System:Double>
    <System:Double x:Key="ActivityContentFontSize">14</System:Double>
</ResourceDictionary>