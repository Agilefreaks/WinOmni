<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Border-->
    <Style x:Key="NotificationBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Effect" Value="{DynamicResource NotificationDropShadowEffect}"/>
        <Setter Property="MinHeight" Value="90"/>
        <Setter Property="Width" Value="380"/>
        <Setter Property="Background" Value="{DynamicResource NotificationBackgroundBrush}"/>
    </Style>
</ResourceDictionary>
