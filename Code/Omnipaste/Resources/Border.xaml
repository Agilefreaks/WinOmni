<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:notification="clr-namespace:Omnipaste.Notification">

    <!--Border-->
    <Style x:Key="NotificationBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Effect" Value="{DynamicResource NotificationDropShadowEffect}"/>
        <Setter Property="Height" Value="90"/>
        <Setter Property="Width" Value="380"/>
        <Setter Property="Background" Value="{DynamicResource NotificationBackgroundBrush}"></Setter>
    </Style>

    <Style x:Key="NotificationIconContainerStyle" TargetType="Border">
        <Setter Property="Width" Value="90"/>
        <Setter Property="Height" Value="90"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=Type}" Value="{x:Static notification:NotificationTypeEnum.Clipping}">
                <Setter Property="Background" Value="{DynamicResource ClippingNotificationBrush}"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Type}" Value="{x:Static notification:NotificationTypeEnum.IncomingCall}">
                <Setter Property="Background" Value="{DynamicResource CallNotificationBrush}"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Type}" Value="{x:Static notification:NotificationTypeEnum.IncomingSMS}">
                <Setter Property="Background" Value="{DynamicResource SMSNotificationBrush}"></Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding Path=Type}" Value="{x:Static notification:NotificationTypeEnum.Link}">
                <Setter Property="Background" Value="{DynamicResource LinkNotificationBrush}"></Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
