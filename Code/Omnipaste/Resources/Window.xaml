<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="ShellWindowStyle" TargetType="controls:MetroWindow" BasedOn="{StaticResource {x:Type controls:MetroWindow}}">
        <Setter Property="Width" Value="{StaticResource DefaultWindowWidth}" />
        <Setter Property="Height" Value="{StaticResource DefaultWindowHeight}" />
        <Setter Property="Icon" Value="/Icon.ico"/>
        <Setter Property="ShowIconOnTitleBar" Value="False"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="MinHeight" Value="{StaticResource MinWindowHeight}"/>
        <Setter Property="MinWidth" Value="{StaticResource MinWindowWidth}"/>
        <Setter Property="WindowTitleBrush" Value="{DynamicResource WindowBorderBrush}"/>
        <Setter Property="NonActiveWindowTitleBrush" Value="{DynamicResource WindowBorderBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="WindowTransitionsEnabled" Value="False"/>
    </Style>
</ResourceDictionary>