<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="ShellWindowStyle" TargetType="controls:MetroWindow" BasedOn="{StaticResource {x:Type controls:MetroWindow}}">
        <Setter Property="Width" Value="{StaticResource DefaultWindowWidth}" />
        <Setter Property="Height" Value="{StaticResource DefaultWindowHeight}" />
        <Setter Property="Icon" Value="/Icon.ico"/>
        <Setter Property="ResizeMode" Value="CanMinimize"/>
        <Setter Property="WindowStyle" Value="SingleBorderWindow"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="NonActiveBorderBrush" Value="{StaticResource BlackBrush}"/>
    </Style>
</ResourceDictionary>