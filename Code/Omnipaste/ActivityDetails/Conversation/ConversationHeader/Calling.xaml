<UserControl x:Class="Omnipaste.ActivityDetails.Conversation.ConversationHeader.Calling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:Omnipaste.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Border Background="{DynamicResource CallingBackgroundBrush}" Padding="{DynamicResource ActivityHeaderMargin}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Control Style="{DynamicResource ImageInCircle}" Tag="{Binding Path=ContactInfo.Image}" Width="40" Height="40" Margin="0,0,10,0"
                     Background="{DynamicResource CallingBackgroundBrush}"/>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Style="{DynamicResource ActivityContentTextStyle}" Foreground="{DynamicResource CallBrush}">
                    <Run Text="{x:Static properties:Resources.Calling}" />
                    <Run Text="{Binding Path=ContactInfo.Name, Mode=OneWay}" FontWeight="Bold"></Run>
                </TextBlock>
                <TextBlock Text="{x:Static properties:Resources.CallingGuide}" Style="{DynamicResource ActivityContentTextStyle}" Foreground="{DynamicResource CallBrush}" FontStyle="Italic" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
