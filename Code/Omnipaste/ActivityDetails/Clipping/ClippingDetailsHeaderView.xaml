<UserControl x:Class="Omnipaste.ActivityDetails.Clipping.ClippingDetailsHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:Omnipaste.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="22,0,0,22">
            <Rectangle Height="24" Width="25" Fill="{DynamicResource ActivityContentBrush}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource clippings_icon}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
            <TextBlock Text="{x:Static properties:Resources.ClippingDetailsHeaderTitle}" 
                       Margin="13,0,0,0" 
                       FontFamily="{DynamicResource ActivityContentFont}" 
                       FontSize="{DynamicResource ActivityContentFontSize}" 
                       Foreground="{DynamicResource LabelBrush}"/>
            <TextBlock x:Name="Model_Device" FontFamily="{DynamicResource ContentFont}" 
                       FontSize="{DynamicResource ActivityContentFontSize}" Foreground="{DynamicResource ActivityContentBrush}"/>
        </StackPanel>
        <Border Grid.Row="1" Style="{DynamicResource StaticContentDecoratorStyle}" Background="{DynamicResource ClippingBrush}" 
                DockPanel.Dock="Bottom"/>
    </Grid>
</UserControl>
