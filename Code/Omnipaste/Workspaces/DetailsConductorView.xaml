<UserControl x:Class="Omnipaste.Workspaces.DetailsConductorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <controls:TransitioningContentControl cal:View.Model="{Binding Path=ActiveItem}" CustomVisualStatesName="RightAndScaleTransition" Transition="Custom"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ContentControl" Tag="{Binding Path=AnimationOriginPoint}"/>
</UserControl>
