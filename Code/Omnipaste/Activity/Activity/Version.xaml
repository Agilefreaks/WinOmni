<UserControl x:Class="Omnipaste.Activity.Activity.Version"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <TextBlock x:Name="Model_Content" Style="{DynamicResource ActivityTitleTextBlockStyle}"/>

        <Button cal:Message.Attach="UpdateApp" HorizontalAlignment="Right" Height="15" Width="15" Margin="12,0">
            <Button.Background>
                <VisualBrush Stretch="Uniform" Visual="{DynamicResource restart_icon}"/>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
