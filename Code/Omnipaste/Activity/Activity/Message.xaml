<UserControl x:Class="Omnipaste.Activity.Activity.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:Omnipaste.Properties"
             xmlns:converters="clr-namespace:Omnipaste.Activity.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:ViewedSizeConverter x:Key="ViewedSizeConverter"/>
    </UserControl.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Path=ContactInfo.Image}" Style="{DynamicResource UserIconStyle}"/>
            <TextBlock Text="{x:Static properties:Resources.SMSLabel}" Style="{DynamicResource ActivityTitleTextBlockStyle}"/>
            <TextBlock x:Name="ContactInfo_Identifier" Style="{DynamicResource ActivityContentTextBlockStyle}" FontWeight="SemiBold" Padding="0,8"/>
        </StackPanel>
        <TextBlock x:Name="Model_Content" Style="{DynamicResource ActivitySecondaryContentTextBlockStyle}" MaxHeight="{Binding Path=ContentInfo, Converter={StaticResource ViewedSizeConverter}}"/>
    </StackPanel>
</UserControl>
