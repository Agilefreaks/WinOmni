<UserControl x:Class="Omnipaste.Activity.Activity.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:Omnipaste.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Path=ContactImage}" Style="{DynamicResource UserIconStyle}"/>
            <TextBlock Text="{x:Static properties:Resources.SMSLabel}" Style="{DynamicResource ActivityContentTextBlockStyle}"/>
            <TextBox x:Name="ContactIdentifier" Style="{DynamicResource ActivityContentTextBoxStyle}" FontWeight="SemiBold"/>
        </StackPanel>
        <TextBox x:Name="Model_Content" Style="{DynamicResource ActivitySecondaryContentTextBoxStyle}"/>
    </StackPanel>
</UserControl>
