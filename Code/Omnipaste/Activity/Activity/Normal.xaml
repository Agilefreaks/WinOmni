<UserControl x:Class="Omnipaste.Activity.Activity.Normal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:Omnipaste.Activity.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:ViewedSizeConverter x:Key="ViewedSizeConverter"/>
    </UserControl.Resources>

    <TextBlock x:Name="Model_Content" Style="{DynamicResource ActivityTitleTextBlockStyle}" MaxHeight="{Binding Path=ContentInfo, Converter={StaticResource ViewedSizeConverter}}"/>
</UserControl>
