<UserControl x:Class="OmniHolidays.MessagesWorkspace.MessagesMainMenuEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <RadioButton Visibility="{Binding Path=CanPerformAction, Converter={StaticResource BooleanToVisibilityConverter}}" cal:Message.Attach="PerformAction()" Style="{DynamicResource HolidaySideMainButtonStyle}" IsChecked="{Binding Path=IsOpen, Mode=OneWay}" Tag="{Binding Path=DisplayName}" Content="{Binding Path=Icon, Converter={StaticResource StringToResourceConverter}}" />

</UserControl>
