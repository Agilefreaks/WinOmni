<UserControl x:Class="OmniHolidays.MessagesWorkspace.ContactList.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border DataContext="{Binding}">
        <DockPanel LastChildFill="True">
            <Control Style="{DynamicResource ImageInCircle}" Tag="{Binding Path=Image}" Width="28" Height="28" DockPanel.Dock="Left" 
                     Margin="0,0,24,0" />
            <CheckBox DockPanel.Dock="Right" VerticalAlignment="Center"/>
            <TextBlock x:Name="Identifier" FontFamily="{DynamicResource ContentFont}" FontSize="{DynamicResource ActivityContentFontSize}"
                       Foreground="{DynamicResource ActivityContentBrush}" VerticalAlignment="Center"/>
        </DockPanel>
    </Border>
</UserControl>
