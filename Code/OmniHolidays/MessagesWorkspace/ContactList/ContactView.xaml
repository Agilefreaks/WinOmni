<UserControl x:Class="OmniHolidays.MessagesWorkspace.ContactList.ContactView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border DataContext="{Binding}">
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <CheckBox x:Name="IsSelected" VerticalAlignment="Center" Margin="0,0,8,0" Style="{DynamicResource SmallCheckBoxStyle}"/>
                    <Control Style="{DynamicResource ImageInCircle}" Tag="{Binding Path=Model.Image}" Width="28" Height="28" 
                     Margin="0,0,8,0" />
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="Model_Identifier" FontFamily="{DynamicResource ContentFont}" FontSize="{DynamicResource ActivityContentFontSize}"
                       Foreground="{DynamicResource ActivityContentBrush}" VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="220"/>
        </DockPanel>
    </Border>
</UserControl>
