<UserControl x:Class="OmniHolidays.MessagesWorkspace.MessageDetails.MessageDetailsHeader.Sent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:OmniHolidays.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#fafff8" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.RowSpan="2" HorizontalAlignment="Stretch" LastChildFill="True" Margin="19,0">
            <Button DockPanel.Dock="Right" Background="{DynamicResource PlusButtonBrush}" Style="{DynamicResource EmptyButtonStyle}"
                    x:Name="StartNewMessage" Width="35" Height="35"/>
            <TextBlock VerticalAlignment="Center" FontFamily="{DynamicResource ActivityContentFont}" 
                   FontSize="{DynamicResource ActivityContentFontSize}" Foreground="#a7da8c" FontStyle="Italic"
                   Text="{x:Static properties:Resources.MessageSent}">
            </TextBlock>
        </DockPanel>
        <Border Grid.Row="1" Background="#56b723" Height="5"/>
    </Grid>
</UserControl>
