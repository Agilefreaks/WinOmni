<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="GreetingHeaderTextBlockStyle" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontFamily" Value="{DynamicResource HolidayFont}"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="NavigateBackButtonStyle">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource LabelBrush}"/>
    </Style>
    
    <Style TargetType="Run" x:Key="TemplatePlaceholderTextBlockStyle">
        <Setter Property="Foreground" Value="{DynamicResource LabelBrush}"/>
    </Style>
</ResourceDictionary>