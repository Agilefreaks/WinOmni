<Window x:Class="Omnipaste.Shell.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
        Width="{Binding Path=Content.Width, ElementName=ActiveItem}"
        Height="{Binding Path=Content.Height, ElementName=ActiveItem}"
        WindowStartupLocation="CenterScreen"
        cal:Message.Attach="[Event Closing] = [Action OnClosing($eventArgs)]; [Event KeyUp] = [Action OnKeyReleased($eventArgs)]"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize" Icon="/Icon.ico"
        >
    
    <Grid Style="{StaticResource ShellGrid}">
        <ContentControl x:Name="ActiveItem" />
    </Grid>
    
</Window>
